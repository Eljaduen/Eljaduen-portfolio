---
import { projects } from '../data/projects-data'
import CardProjects from './CardProjects.astro'
---


<div class="w-full lg:max-w-[72rem] mx-auto px-8 lg:px-8 mb-16 pt-16" id="projects">
    <h2 class="text-[2.125rem] lg:text-[3.125rem] font-bold mb-8" >
        Projects and participations
    </h2>
    
    <div class="grid mx-auto gap-6 mb-8 xl:grid-cols-4 lg:grid-cols-3 md:grid-cols-2 xs:grid-cols-1">
        {
            projects.map((card)=> (
                <CardProjects title={card.title}
                description={card.description}
                image={card.image}
                color={card.color} />
            ))
        }
    </div>
</div>
