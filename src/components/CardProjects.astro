---
interface Props {
    title: string
    description: string
    image: string
    color: string
}

const { title, description, image, color } = Astro.props;
---

<a 
    href={`/${image}`} id={image} class="parent-container hover:scale-[105%] transition-all duration-300 ease-in relative border border-white/80 bg-cover bg-center h-[300px] cursor-pointer"
    style={{backgroundImage: `linear-gradient(to bottom, hsla(0, 0%, 100%, 0.05), hsla(0, 0%, 0%)), url('/${image}.png')`}}
    transition:name={`image-${image}`}
>
    <div class="container absolute bottom-0 px-5 my-6">
        <h3 class="text-[2rem] font-bold">{title}</h3>
        <p class="paragraph text-white/60 row-span-1 opacity-0 md:text-base xxs:text-[1.25rem] xs:text-[0.9375rem]">{description.slice(0, 60)}...</p>
    </div>
</a>