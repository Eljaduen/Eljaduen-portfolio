---
interface Props {
	title: string;
}

import '../assets/style.css'
const { title } = Astro.props;
import { ViewTransitions } from "astro:transitions";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<!-- Boxi Icons -->
		<link rel="stylesheet"
		href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css">
		<!-- Email js -->
		<script type="text/javascript"
		src="https://cdn.jsdelivr.net/npm/@emailjs/browser@4/dist/email.min.js"></script>
	  
		<script type="text/javascript">
			emailjs.init('DJmJltwXrOq_Hk-fT')
		</script>
		<title>{title}</title>
		<ViewTransitions/>
	</head>
	<body class=" text-white bg-[rgb(6,39,43)]" style={{background: 'radial-gradient(circle, rgba(6,39,43,1) 0%, rgba(0,0,0,1) 100%)'}}>
		<slot />
		<script src="../services/emailJs.js"></script>
		<script src="../services/ViewTransitions.js"></script>
	</body>
</html>

